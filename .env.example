# AgentPay-USDCx Environment Variables
# Copy this file to .env and fill in your values

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# Server wallet address (Stacks testnet)
# Generate with: python -m src.verification.wallet_generator
# MUST start with "ST" for testnet
AGENTPAY_SERVER_WALLET=ST_YOUR_SERVER_WALLET_ADDRESS_HERE

# Server wallet private key (for receiving payments - optional for verification module)
# NEVER commit this to source control!
# AGENTPAY_SERVER_PRIVATE_KEY=your_private_key_hex_here

# ==============================================
# AGENT CONFIGURATION (for Module D)
# ==============================================

# Agent wallet private key
# NEVER commit this to source control!
# AGENTPAY_AGENT_PRIVATE_KEY=your_agent_private_key_hex_here

# ==============================================
# API CONFIGURATION
# ==============================================

# Stacks API endpoint (default: Hiro testnet)
STACKS_API_URL=https://api.testnet.hiro.so

# Payment amount in USDCx base units (100000 = 0.1 USDCx)
PAYMENT_AMOUNT=100000
